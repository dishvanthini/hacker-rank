#include <stdio.h>
void read(int a[], int n);
void display(int a[], int n);
void insertionSort(int a[], int n);

int main()
{
    int a[4];
    read(a, 4);
    printf("before sort: ");
    display(a, 4);
    insertionSort(a, 4);
    printf("Sorted array: ");
    display(a, 4);

    return 0;
}

void read(int a[], int n)
{
    printf("Enter %d elements for the array:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
}

void display(int a[], int n)
{
    for(int i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }
    printf("\n");
}

void insertionSort(int a[], int n)
{
    int i, key, j;
    for (i = 1; i < n; i++) {
        key = a[i];
        j = i - 1;

        while (j >= 0 && a[j] > key) {
            a[j + 1] = a[j];
            j = j - 1;
        }
        a[j + 1] = key;
    }
}
