#include <stdio.h>

void readArray(int arr[], int n);
void displayArray(int arr[], int n);
void insertionSort(int arr[], int n);

int main()
{
    int arr[4];

    // Read and display the array
    readArray(arr, 4);
    printf("Original array: ");
    displayArray(arr, 4);

    // Sort the array
    insertionSort(arr, 4);

    // Print the sorted array
    printf("Sorted array: ");
    displayArray(arr, 4);

    return 0;
}

void readArray(int arr[], int n)
{
    printf("Enter %d elements for the array:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
}

void displayArray(int arr[], int n)
{
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

void insertionSort(int arr[], int n)
{
    int i, key, j;
    for (i = 1; i < n; i++) {
        key = arr[i];
        j = i - 1;

        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j = j - 1;
        }
        arr[j + 1] = key;
    }
}
